<div class="container">
  <h1> Create a New In App Purchase </h1>
  <% if @error %>
    <div> Following problems exist </div>
    <div> <%= @error %> </div>
  <% end %>

  <div class="spinner-grow" role="status">
    <span class="sr-only">Loading...</span>
  </div>

  <%= bootstrap_form_for :in_app_purchase, url: {action: "create"}, method: "post", html: {id: "in_app_purchase"} do |f| %>
    <div class="row">
      <div class="col-9"></div> 
      <div class="col-3">
        <%= f.submit "Create", id: 'submit' %>
      </div>
    </div>
    <%= f.text_field :reference_name %>
    <%= f.text_field :product_id %>
    <%= f.check_box :cleared_for_sale %>

    <div class="add-language">Add Language </div>

    <div class="add-dynamic-fields">
    <input type="hidden" id="counter" name="in_app_purchase[counter]" value="">

  <% end %>
</div>
